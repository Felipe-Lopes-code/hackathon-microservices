# =============================================================================
# Environment Variables - Docker Compose
# =============================================================================
# Copy this file to .env and fill in the values before running docker-compose.
# NEVER commit the .env file to version control!
#
# To generate secure random strings:
#   Linux/macOS: openssl rand -base64 32
#   PowerShell:  [Convert]::ToBase64String((1..32 | ForEach-Object { Get-Random -Maximum 256 }) -as [byte[]])
# =============================================================================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# JWT Configuration
JWT_SECRET=CHANGE_ME_USE_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Application Environment
NODE_ENV=development
