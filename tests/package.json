{
  "name": "hackathon-microservices-tests",
  "version": "1.0.0",
  "description": "Security and Performance Tests for EduShare Microservices",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:security": "jest tests/security.test.js",
    "test:performance": "jest tests/performance.test.js",
    "load-test": "node tests/performance.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "microservices",
    "security",
    "performance",
    "testing"
  ],
  "author": "Hackathon Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "autocannon": "^7.12.0",
    "jest": "^30.2.0"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "dotenv": "^16.3.1",
    "swagger-jsdoc": "^6.2.8"
  },
  "overrides": {
    "minimatch": "^10.2.2",
    "glob": "^11.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "tests/**/*.js",
      "!tests/**/*.test.js"
    ]
  }
}
