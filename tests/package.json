{
  "name": "hackathon-microservices-tests",
  "version": "1.0.0",
  "description": "Security and Performance Tests for E-commerce Microservices",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:security": "jest tests/security.test.js",
    "test:performance": "jest tests/performance.test.js",
    "load-test": "node tests/performance.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "microservices",
    "security",
    "performance",
    "testing"
  ],
  "author": "Hackathon Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "autocannon": "^7.12.0",
    "@types/jest": "^29.5.8"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "tests/**/*.js",
      "!tests/**/*.test.js"
    ]
  }
}
