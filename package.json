{
  "name": "edushare-platform",
  "version": "1.0.0",
  "description": "EduShare - Plataforma de Auxílio aos Professores do Ensino Público com Microserviços",
  "private": true,
  "workspaces": [
    "services/*",
    "api-gateway",
    "web-client",
    "mobile-client"
  ],
  "scripts": {
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "keywords": [
    "education",
    "edtech",
    "teachers",
    "materials",
    "microservices",
    "clean-architecture",
    "nodejs",
    "react",
    "docker"
  ],
  "author": "Hackathon 5FSDT Team - Postech",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^10.0.1",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "vite": "7.3.1"
  }
}
