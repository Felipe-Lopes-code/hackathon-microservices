{
  "name": "hackathon-microservices",
  "version": "1.0.0",
  "description": "Sistema de E-commerce com Microservi√ßos - Clean Architecture",
  "private": true,
  "workspaces": [
    "services/*",
    "api-gateway",
    "web-client",
    "mobile-client"
  ],
  "scripts": {
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "keywords": [
    "microservices",
    "clean-architecture",
    "nodejs",
    "react",
    "docker"
  ],
  "author": "Hackathon Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.56.0",
    "prettier": "^3.1.1"
  }
}
